<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title -->
    <title>..:: PracticeTheVerb.com ::..</title>
    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico">


    <link href='https://www.practicetheverb.com/' rel='canonical' />
    <!-- Google Ads -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1494314954462314" crossorigin="anonymous"></script>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PracticeTheVerb.styles.css" asp-append-version="true" />

    <meta property="og:url" content="https://www.practicetheverb.com" />
    <meta property="og:title" content="practiceTheVerb.com" />
    <meta property="og:description" content="Verbs for practising in different languages and verb tenses" />
    <meta property="og:image" itemprop="image" content="@Url.Content("~/verbItaliano/image/socialMedia.png")" />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="300" />
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PracticeTheVerb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/verbi.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
