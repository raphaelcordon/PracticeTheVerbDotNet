                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="pb-0 mb-0">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="congiuntivoImperfettoLui">lui</span>
                            <input type="text" class="form-control" id="excongiuntivoImperfettoLui" oninput="this.value = this.value.toLowerCase()">
                        </div>
                    </td>
                    <td class="pb-0 mb-0">
                        <div>

                            <input type="text" class="form-control" value="@verb.congiuntivoimperfettolui " id="answercongiuntivoImperfettoLui" hidden>
