                    <td class="pb-0 mb-0">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="congiuntivoImperfettoIo"> io </span>
                            <input type="text" class="form-control" id="excongiuntivoImperfettoIo" oninput="this.value = this.value.toLowerCase()">
                        </div>
                    </td>
                    <td class="pb-0 mb-0">
                        <div>

                            <input type="text" class="form-control" value="@verb.congiuntivoimperfettoio" id="answercongiuntivoImperfettoIo" hidden>
                            <span class="CSSverbsAnswercongiuntivoImperfettoIo">@verb.congiuntivoimperfettoio</span>

                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="pb-0 mb-0">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="congiuntivoImperfettoTu"> tu </span>
                            <input type="text" class="form-control" id="excongiuntivoImperfettoTu" oninput="this.value = this.value.toLowerCase()">
                        </div>
                    </td>
                    <td class="pb-0 mb-0">
                        <div>

                            <input type="text" class="form-control" value="@verb.congiuntivoimperfettotu" id="answercongiuntivoImperfettoTu" hidden>
