                    <td class="pb-0 mb-0">
                        <div>

                            <input type="text" class="form-control" value="@verb.indicativotrapassatoremotonoi" id="answerindicativoTrapassatoRemotoNoi" hidden>
                            <span class="CSSverbsAnswerindicativoTrapassatoRemotoNoi">@verb.indicativotrapassatoremotonoi</span>

                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="pb-0 mb-0">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="indicativoTrapassatoRemotoVoi">voi</span>
                            <input type="text" class="form-control" id="exindicativoTrapassatoRemotoVoi" oninput="this.value = this.value.toLowerCase()">
