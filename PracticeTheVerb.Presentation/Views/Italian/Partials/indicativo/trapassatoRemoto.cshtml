                    <td class="pb-0 mb-0">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="indicativoTrapassatoRemotoIo"> io </span>
                            <input type="text" class="form-control" id="exindicativoTrapassatoRemotoIo" oninput="this.value = this.value.toLowerCase()">
                        </div>
                    </td>
                    <td class="pb-0 mb-0">
                        <div>

                            <input type="text" class="form-control" value="@verb.indicativotrapassatoremotoio" id="answerindicativoTrapassatoRemotoIo" hidden>
                            <span class="CSSverbsAnswerindicativoTrapassatoRemotoIo">@verb.indicativotrapassatoremotoio</span>

                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="pb-0 mb-0">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text" id="indicativoTrapassatoRemotoTu"> tu </span>
                            <input type="text" class="form-control" id="exindicativoTrapassatoRemotoTu" oninput="this.value = this.value.toLowerCase()">
                        </div>
                    </td>
                    <td class="pb-0 mb-0">
                        <div>

                            <input type="text" class="form-control" value="@verb.indicativotrapassatoremototu" id="answerindicativoTrapassatoRemotoTu" hidden>
